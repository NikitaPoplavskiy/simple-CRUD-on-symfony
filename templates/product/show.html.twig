{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1 class="text-white">Product #{{ product.id }}</h1>
    <a href="{{ path('product_index') }}"><button class="btn btn-primary btn-sm">back to list</button></a>

    <table class="table text-white">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Category_id</th>
                <td>{{ product.categoryId }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="pr-3">
            <a href="{{ path('product_edit', {'id': product.id}) }}"><button class="btn btn-warning btn-sm">edit</button></a>
        </div>

        {{ include('product/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1 class="text-white">Products</h1>
    <a href="{{ path('product_new') }}"><button type="button" class="btn btn-primary">Create new</button></a>
    <div class="d-flex flex-column justify-content-center">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Category_id</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in pagination %}
                <tr scope="row">
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td>{{ product.categoryId }}</td>
                    <td>
                        <a href="{{ path('product_show', {'id': product.id}) }}"><button class="btn btn-primary btn-sm">show</button></a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}"><button class="btn btn-warning btn-sm">edit</button></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}
